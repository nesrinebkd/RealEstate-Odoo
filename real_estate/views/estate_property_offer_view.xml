<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="estate_offer_model_view_tree" model="ir.ui.view">
        <field name="name">estate.property.offer.tree</field>
        <field name="model">estate_property_offer</field>

        <field name="arch" type="xml">
            <tree string="Property offers">

                <field name="price"/>
                <field name="partner_id"/>
                <field name="validity"/>
                <field name="date_deadline"/>
                <button name="action_accept" type="object"   icon="fa-check" />
                <button name="action_refuse" type="object"   icon="fa-times" />
                <field name="status"/>

            </tree>
        </field>
    </record>

    <record id="estate_offer_model_view_form" model="ir.ui.view">
        <field name="name">estate.property.offer.form</field>
        <field name="model">estate_property_offer</field>

        <field name="arch" type="xml">
            <form string="Test">
                <sheet>

                    <group>


                        <field name="price"/>
                        <field name="partner_id"/>
                        <field name="validity"/>
                        <field name="partner_id"/>
                        <field name="date_deadline"/>
                        <field name="status"/>


                    </group>

                </sheet>
            </form>
        </field>
    </record>
</odoo>